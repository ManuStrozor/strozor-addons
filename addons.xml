<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon  id="script.mynewscript"
        name="My new script"
        version="0.0.5"
        provider-name="ManuStrozor">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Just a simple test script</summary>
        <description>This script is totaly useless !</description>
        <disclaimer>Use it at your own risks...</disclaimer>
        <website></website>
        <source>https://github.com/ManuStrozor/strozor-addons/</source>
        <license></license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>screenshots/screenshot-01.jpg</screenshot>
            <screenshot>screenshots/screenshot-02.jpg</screenshot>
            <screenshot>screenshots/screenshot-03.jpg</screenshot>
        </assets>
    </extension>
</addon>
<addon  id="plugin.video.tmdblists"
        name="My TMDB Lists"
        version="0.0.2"
        provider-name="ManuStrozor">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>All your TMDB lists in one place</summary>
        <description>This plugin shows you your TMDB lists</description>
        <disclaimer>You must create an account on themoviedb.org before using this plugin!</disclaimer>
        <source>https://github.com/ManuStrozor/strozor-addons/</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon  id="repository.strozor"
        name="Strozor Repository"
        version="0.0.3"
        provider-name="ManuStrozor">
    <extension point="xbmc.addon.repository" name="Strozor XBMC Addon Repository">
        <checksum>https://raw.githubusercontent.com/ManuStrozor/strozor-addons/master/addons.xml.md5</checksum>
        <info compressed="false">https://raw.githubusercontent.com/ManuStrozor/strozor-addons/master/addons.xml</info>
        <datadir zip="true">https://github.com/ManuStrozor/strozor-addons/raw/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Strozor Repository</summary>
        <description>Strozor Repository contains plugins and scripts made by ManuStrozor: plugin.video.tmdblists, script.mynewscript. If you find a broken or non-working add-on please help by submitting fixes via GitHub.</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>